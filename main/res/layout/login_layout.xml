<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pedra"
    android:orientation="vertical"
    tools:context=".Login_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Login"
            android:linksClickable="true"
          android:textAlignment="textEnd"
            android:textSize="20dp"
            />


        <ImageView


            android:layout_width="200dp"
            android:layout_height="215dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:src="@drawable/faf" />
<layout


        <EditText
            android:textColorHint="@color/white"
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableStart="@drawable/person2"
            android:hint="Username"
            android:inputType="textPersonName"
            android:maxLenght="50" android:maxLength="50" />



        <EditText
            android:textColorHint="@color/white"
            android:id="@+id/senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableStart="@drawable/baseline_lock"
            android:hint="Password"
            android:inputType="numberPassword"
            android:maxLenght="50"
            android:maxLength="50"/>








        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button

                android:layout_width="5dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="60dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:padding="15dp"
                android:paddingHorizontal="500dp"
                android:text="entrar" />





        </LinearLayout>
        <TextView
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="-60dp"
            android:text="Don't have an accont? Sign up" />
    </LinearLayout>

</LinearLayout>